<div class="background-filter">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
          <div class="card card-signup">
            <%= form_for @user do |f| %>
              <%= render  "shared/error_messages" %>
              <div class="header header-primary text-center">
                <h4><%= t "signup.title" %></h4>
                <div class="social-line">
                  <a href="#" class="btn btn-simple btn-just-icon">
                    <i class="fa fa-facebook-square"></i>
                  </a>
                  <a href="#" class="btn btn-simple btn-just-icon">
                      <i class="fa fa-twitter"></i>
                    </a>
                    <a href="#" class="btn btn-simple btn-just-icon">
                      <i class="fa fa-google-plus"></i>
                    </a>
                  </div>
                </div>
                <div class="content">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="material-icons">face</i>
                    </span>
                    <%= f.text_field :name, class: "form-control", placeholder: t("name") %>
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="material-icons">email</i>
                    </span>
                    <%= f.email_field :email, class: "form-control", placeholder: t("email") %>
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="material-icons">lock_outline</i>
                    </span>
                    <%= f.password_field :password, class: "form-control", placeholder: t("password") %>
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="material-icons">autorenew</i>
                    </span>
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder: t("confirmation") %>
                  </div>
                </div>
                <div class="footer text-center">
                  <%= f.submit t("signup.submit"), class: "btn btn-white" %>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  
  
  
  