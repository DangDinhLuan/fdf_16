<div class="row">
  <%= render "sitebar" %>
  <div id="infomations">
    <div class="col-md-9" id="customer-orders">
      <div class="box suggestion">
        <h1><%= t "user_profile.suggestions.title" %></h1>
        <button type="button" class="btn btn-success btn-suggestion">
          <%= link_to new_suggestion_path do %>
            <i class="fa fa-plus"></i><%= t "user_profile.suggestions.show.add" %>
          <% end %>
        </button>
        <hr>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%= t "user_profile.suggestions.show.title" %></th>
                <th><%= t "user_profile.suggestions.show.image" %></th>
                <th><%= t "user_profile.suggestions.show.price" %></th>
                <th><%= t "user_profile.suggestions.show.status" %></th>
                <th><%= t "user_profile.suggestions.show.action" %></th>
              </tr>
            </thead>
            <tbody>
              <% @suggestions.each do |suggestion| %>
              <tr>
                <th><%= suggestion.title %></th>
                <td><%= image_tag suggestion.image.url, class: "img-responsive" %></td>
                <td><%= currency_for suggestion %></td>
                <td><span class="label label-info"><%= suggestion.status_suggestion %></span>
                </td>
                <td>
                  <button type="button" rel="tooltip" title="<%= t "user_profile.suggestions.show.edit_title"%>" class="btn btn-success btn-simple btn-xs">
                    <%= link_to edit_suggestion_path(suggestion) do %>
                      <i class="material-icons">edit</i>
                    <% end %>
                  </button>
                  <button type="button" rel="tooltip" title="<%= t "user_profile.suggestions.show.delete_title"%>" class="btn btn-danger btn-simple btn-xs">
                    <%= link_to suggestion_path(suggestion), method: :delete, data: {confirm: t("user_profile.suggestions.show.delete_confirm")} do %>
                      <i class="material-icons">delete</i>
                    <% end %>
                  </button>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @suggestions %>
          <%= page_entries_info @suggestions if @suggestions.blank? %>
        </div>
      </div>
    </div>
  </div>
</div>
