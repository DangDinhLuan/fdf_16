<div class="col-md-12">
   <%= render "shared/flash_messages"%>
   <div class="card">
      <div class="card-header" data-background-color="purple">
         <h4 class="title"><%= t "admin.comment.title" %></h4>
      </div>
      <div class="card-content table-responsive">
         <table class="table">
            <thead>
               <tr>
                  <th class="text-center"><%= t "admin.comment.table.id" %></th>
                  <th><%= t "admin.comment.table.name" %></th>
                  <th><%= t "admin.comment.table.product" %></th>
                  <th><%= t "admin.comment.table.content" %></th>
                  <th class="text-right th-action"><%= t "admin.categories.action" %></th>
               </tr>
            </thead>
            <tbody>
               <% @comments.each_with_index do |comment, index| %>
                  <tr>
                     <td class="text-center"><%= number_index index %></td>
                     <td><%= comment.user.name %></td>
                     <td><%= comment.product.title %></td>
                     <td><%= comment.content %></td>
                     <td class="td-actions text-right">
                        <button type="button" rel="tooltip" title="<%= t "admin.comment.table.delete"%>" class="btn btn-danger btn-simple btn-xs">
                          <%= link_to admin_comment_path(comment), method: :delete, data: {confirm: t("admin.comment.table.delete_confirm")} do %>
                            <i class="material-icons">delete</i>
                          <% end %>
                        </button>
                     </td>
                  </tr>
               <% end %>
            </tbody>
         </table>
         <%= paginate @comments %>
         <%= page_entries_info @comments if @comments.blank? %>
      </div>
   </div>
</div>
